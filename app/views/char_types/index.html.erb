<h1>Listing character types</h1>
 
<%= link_to new_char_type_path, class: 'btn btn-success' do %>
 	<i class="glyphicon glyphicon-plus"></i> New character type
<% end %>

<p></p>
<%= paginate @char_types %>
<% if current_user.char_types.present? %>
<table class="table table-hover">
  <tr class="info">
    <th>Title</th>
    <th>Avatar</th>
    <th></th>
    <th></th>
    <th></th>
    <th>Attributes</th>
  </tr>
 
  <% @char_types.each do |type| %>
    <tr>
      <%= render type %>
				<% if type.char_attributes.present? %>
					<table class="table table-hover">
						<tr class="info">
							<th>Attribute name</th>
							<th>Attribute value</th>
							<th>Attribute icon</th>
							<th></th>
		  				<th></th>
		  				<th></th>
						</tr>
						
							<%= render type.char_attributes.order(:title) %>
							
						<tr>
							<th><%= link_to 'Add more attributes', new_char_type_char_attribute_path(type)%></th>
							<th></th>
		  				<th></th>
		  				<th></th>
		  				<th></th>
		  				<th></th>
						</tr>
					</table>
				<% else %>
					<p>This character type has no attributes! <%= link_to 'Add some',new_char_type_char_attribute_path(type) %>.</p>
				<% end %>
			</td>
    </tr>
  <% end %>
</table>
<% else %>
	<p>You haven't created any characters yet! <%= link_to 'Create some', new_char_type_path %>.</p>
<% end %>
